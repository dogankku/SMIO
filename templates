â€œplatformâ€: platform,
â€œkeyâ€: template_key,
â€œnameâ€: template_data[â€œnameâ€],
â€œemojiâ€: template_data[â€œemojiâ€],
â€œfull_nameâ€: fâ€{template_data[â€˜emojiâ€™]} {template_data[â€˜nameâ€™]}â€
})
